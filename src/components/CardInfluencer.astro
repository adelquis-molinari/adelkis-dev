---
import {
  TwitterIcon,
  GithubIcon,
  TwichIcon,
  YoutubeIcon,
} from "../icons/icons.jsx";
const { name, img, description, twitter, github, twitch, youtube } =
  Astro.props;

const youtubeIcon = `
  
`;
---

<div class="p-4">
  <header class="text-center mb-4 opacity-90">
    <img
      alt="Midu Dev"
      src={img}
      class="mx-auto object-cover rounded-full h-40 w-40"
    />
  </header>
  <div class="text-center">
    <p class="text-2xl text-gray-300">{name}</p>
    <p class="text-xl text-gray-400 font-light pb-4">{description}</p>
  </div>
  <div
    class="pt-4 flex border-t border-gray-200 w-44 mx-auto text-gray-500 items-center justify-between"
  >
    <a href={twitter} target="_blank">
      <TwitterIcon />
    </a>
    <a href={github} target="_blank">
      <GithubIcon />
    </a>
    <!-- svg twitch -->
    {
      twitch && (
        <a href={twitch} target="_blank">
          <TwichIcon />
        </a>
      )
    }
    <a href={youtube} target="_blank">
      <YoutubeIcon />
    </a>
  </div>
</div>
