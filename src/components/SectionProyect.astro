---
import CardProyect from "./CardProyect.astro";
import { projects } from "../helpers/data";
---

<div id="projects" class="flex w-full text-center justify-center mb-20">
  <h2
    class="text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-t from-violet-500 to-teal-500"
  >
    Proyectos
  </h2>
</div>

<section class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-2">
  {projects.map((project) => <CardProyect {...project} />)}
</section>
