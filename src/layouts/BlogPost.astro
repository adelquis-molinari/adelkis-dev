---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FeaturedArticles from "../components/featured-articles.astro";
import Navbar from "../components/Navbar";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="font-rubik bg-zinc-900">
    <main class="flex-col md:max-w-screen-xl m-auto">
      <Navbar />
      <article
        class="flex flex-col justify-center mx-auto xl:max-w-5xl md:max-w-3xl max-w-md px-4 text-gray-200"
      >
        {
          heroImage && (
            <img
              class=" h-auto transition-shadow ease-in-out duration-300 shadow-none hover:shadow-xl"
              src={heroImage}
              alt=""
            />
          )
        }
        <h1 class="text-5xl font-bold mt-0 mb-6">{title}</h1>
        {pubDate && <time>{pubDate}</time>}
        {
          updatedDate && (
            <div>
              Last updated on <time>{updatedDate}</time>
            </div>
          )
        }
        <hr />
        <slot />
      </article>
    </main>
    <FeaturedArticles />
    <Footer />
  </body>
</html>
