---
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar.jsx";
import CvSection from "../components/CvSection.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/hero.astro";
import SectionProyect from "../components/SectionProyect.astro";
import Influencers from "../components/Influencers.astro";
import About from "../components/About.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import MaxWidh from "../components/MaxWidh.astro";
import Navigation from "../components/Navigation.astro";
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="font-rubik bg-zinc-900">
    <main class="flex-col">
      <Navigation client:load />
      <MaxWidh>
        <!-- <Navbar client:load /> -->
        <Hero />
        <About />
        <SectionProyect />
        <Influencers />
        <CvSection />
        <Footer />
      </MaxWidh>
    </main>
  </body>
</html>
